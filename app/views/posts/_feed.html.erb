<div>
    <%= link_to 'New Post', new_post_path(@post), class: "btn btn-primary" %>
    <% unless @posts == nil %>
        <% @posts.each do |post| %>
            <%= post.user.username %>
            <strong><%= post.title %><br></strong>
            <small><%= post.body %><br></small>
        <% end %>
    <% end %>
</div>